  <script>
    $(document).ready(function(){


$("#submit").on("click", function(){
    event.preventDefault();

    var newBurger= {
        burger_name: $("#input").val().trim(),
        devoured: false
    };

    console.log(newBurger);
    $.ajax("/api/burgers", {
    type: "POST",
    data: newBurger
    }).then(
      function(){
      console.log("new burger created");
      location.reload();
  }
)
});

$(".change-devoured").on("click", function(){
  var id = $(this).data("id");
  var newBurgerState={
    devoured : 1
  }
  $.ajax("/api/burgers/"+id, {
    type: "PUT",
    data: newBurgerState
  }).then(
    function(){
      location.reload();
    }
  )
});

















})
  </script>
